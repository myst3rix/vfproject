Create Database virtuell_fabric;

Create Table beschaffung
(
beschaffungsID int not null,
anzahl int,
artikel varchar(30),
Primary key (beschaffungsID)
);

Create Table lieferant
(
lieferID int not null,
lieferantname varchar(30),
straße varchar(30),
ort varchar(30),
plz int,
beschaffungsID int,
Primary key (lieferID),
FOREIGN KEY (beschaffungsID) REFERENCES beschaffung(beschaffungsID)
);

Create Table bestellung
(
bestellID int not null,
datum Date,
Primary key (bestellID)
);

Create Table bestellliste
(
listenID int not null,
produktname varchar(30),
bestellmenge int,
bestellID int,
Primary key (listenID, produktname),
FOREIGN KEY (bestellID) REFERENCES Bestellung(bestellID)
);

Create Table lager
(
lagID int not null,
kuerzel varchar(10),
anzahl int,
groese float,
Primary key (lagID)
);

Create Table produkt
(
produktID int not null,
produktname varchar(30),
preis float,
listenID int,
Primary key (produktID),
FOREIGN KEY (listenID) REFERENCES bestellliste(listenID)
);

Create Table rezeptur
(
rezepturID int not null,
stoff varchar(30),
produktname varchar(10),
produktID int,
Primary key (rezepturID,stoff),
FOREIGN KEY (produktID) REFERENCES produkt(produktID)
);

Create Table produktbestand
(
pbID int not null,
produktID int,
lagID int,
menge int,
Primary key (pbID),
FOREIGN KEY (produktID) REFERENCES produkt(produktID),
FOREIGN KEY (lagID) REFERENCES lager(lagID)
);

Create Table material
(
materialID int not null,
stoff varchar(30),
produktID int,
rezepturID int,
beschaffungsID int,
Primary key (materialID),
FOREIGN KEY (produktID) REFERENCES produkt(produktID),
FOREIGN KEY (beschaffungsID) REFERENCES beschaffung(beschaffungsID),
FOREIGN KEY (rezepturID) REFERENCES rezeptur(rezepturID)
);

Create Table materialbestand
(
mbID int not null,
materialID int,
lagID int,
menge int,
Primary key (mbID),
FOREIGN KEY (materialID) REFERENCES material(materialID),
FOREIGN KEY (lagID) REFERENCES lager(lagID)
);

Create Table werkhalle
(
werkID int not null,
werkname varchar(30),
werkort varchar(30),
werkgroese int,
Primary key (werkID)
);

Create Table station
(
statID int not null,
stationname varchar(30),
maschinenanzahl int,
mitarbeiteranzahl int,
werkID int,
Primary key (statID),
FOREIGN KEY (werkID) REFERENCES werkhalle(werkID)
);

Create Table schicht
(
schichtID int not null,
schichtbeginn time,
schichtende time,
schichtname varchar(20),
Primary key (schichtID)
);

Create Table arbeitsplatz
(
aID int not null,
kuezel varchar(20),
rüstzeit int,
statID int,
Primary key (aID),
FOREIGN KEY (statID) REFERENCES station(statID)
);

Create Table arbeitsplatz_nm_schicht
(
aID int not null,
schichtID int not null,
Primary key (schichtID,aID),
FOREIGN KEY (schichtID) REFERENCES schicht(schichtID),
FOREIGN KEY (aID) REFERENCES arbeitsplatz(aID)
);

Create Table mitarbeiter
(
mitID int not null,
vorname varchar(20),
nachname varchar(20),
stempelkartennummer int,
statID int,
Primary key (mitID),
FOREIGN KEY (statID) REFERENCES station(statID)
);

Create Table maschinentyp
(
tID int not null,
`type` varchar(50),
anzahl int,
wartungsbedürftig int,
Primary key (tID)
);

Create Table history
(
hID int not null,
datum date,
ressource varchar(20),
zeit time,
Primary key (hID)
);

Create Table maschine
(
maschineID int not null,
`type` varchar(50),
seriennummer int,
gewicht float,
kosten float,
groese int,
ressource varchar(20),
energieverbrauch int,
störung varchar(20),
stückzahl int,
maxLast int,
`status` varchar(20),
rezepturID int,
sID int,
tID int,
statID int,
Primary key (maschineID),
FOREIGN KEY (tID) REFERENCES maschinentyp(tID),
FOREIGN KEY (statID) REFERENCES station(statID),
FOREIGN KEY (rezepturID) REFERENCES rezeptur(rezepturID)
);

Create Table sensor
(
sID int not null,
seriennummer int,
minVolt int,
maxVolt int,
hersteller varchar(20),
maschineID int,
datenID int,
Primary key (sID),
FOREIGN KEY (maschineID) REFERENCES maschine(maschineID)
);

Create Table datenerfassung
(
datenID int not null,
durchlaufzeit int,
ressource varchar(20),
warnanschläge int,
energielast int,
hID int,
timestamp datetime,
sID int,
Primary key (datenID),
FOREIGN KEY (hID) REFERENCES history(hID),
FOREIGN KEY (sID) REFERENCES sensor(sID)
);

Create Table ausfall
(
ausfallID int not null,
startzeit datetime,
endzeit datetime,
maschineID int,
Primary key (ausfallID),
FOREIGN KEY (maschineID) REFERENCES maschine(maschineID)
);

Create Table produkt_nm_maschine
(
maschineID int not null,
produktID int not null,
Primary key (maschineID,produktID),
FOREIGN KEY (maschineID) REFERENCES maschine(maschineID),
FOREIGN KEY (produktID) REFERENCES produkt(produktID)
);
